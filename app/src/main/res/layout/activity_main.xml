<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2b9cc2"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:id="@+id/Imgview"
        android:src="@drawable/galge"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#ffff"
        android:id="@+id/th"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Imgview" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:id="@+id/editText"
        android:layout_below="@+id/th"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textColor="#ffff"
        android:background="@drawable/buttonshadow"
        android:id="@+id/check"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#ffff"
        android:id="@+id/tv2"
        android:layout_above="@+id/check"
        android:layout_alignStart="@+id/th"
        android:layout_marginBottom="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genstart"
        android:textColor="#ffff"
        android:background="@drawable/buttonshadow"
        android:id="@+id/genstart"
        android:layout_alignTop="@+id/check"
        android:layout_alignEnd="@+id/editText" />

</RelativeLayout>
