<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2b9cc2"
    >

    android:background="#2b9cc2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/Imgview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:src="@drawable/galge"
            android:textColor="#ffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÃ¦t ordet:"
            android:textColor="#ffff"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:selectAllOnFocus="true"
            android:textColor="#ffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="10dp"
            android:textSize="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brugte bogstaver"
            android:textColor="#ff0000"
            android:layout_below="@+id/th"
            android:layout_alignParentStart="true"
            android:autoText="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <Button
            android:id="@+id/genstart"
            android:layout_width="177dp"
            android:layout_height="match_parent"

            android:layout_alignTop="@+id/check"
            android:background="@drawable/buttonshadow"
            android:text="Genstart"
            android:textColor="#ffff"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:background="@drawable/buttonshadow"
            android:text="Check!"
            android:textColor="#ffff"
            android:layout_gravity="center|right"
            android:layout_weight="0.5"
            android:layout_toEndOf="@+id/genstart"
            android:layout_alignParentBottom="true"
            android:textSize="25dp" />

    </RelativeLayout>


</LinearLayout>